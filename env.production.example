# Docmost Production Environment
# این فایل را کپی کرده و .env نام‌گذاری کنید

# اطلاعات اصلی اپلیکیشن
APP_URL='http://localhost'  # دامنه‌تان را اینجا قرار دهید
APP_SECRET='YOUR_LONG_SECRET_KEY_HERE'  # یک کلید امنیتی طولانی و قوی

# اطلاعات دیتابیس
DATABASE_URL='postgresql://docmost:STRONG_DB_PASSWORD@localhost:5432/docmost?schema=public'

# Redis
REDIS_URL='redis://localhost:6379'

# محیط اجرا
NODE_ENV=production

# آپلود فایل (بایت)
FILE_UPLOAD_SIZE_LIMIT=52428800  # 50MB
FILE_IMPORT_SIZE_LIMIT=52428800  # 50MB

# Collaboration server (WebSocket)
COLLAB_URL='ws://localhost:3001'  # در صورت استفاده از سرور collaboration جداگانه

# تنظیمات اضافی
DRAWIO_URL='https://embed.diagrams.net' 